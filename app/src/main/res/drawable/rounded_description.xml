<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#FFFFFF" /> <!-- Ganti dengan warna yang diinginkan -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" /> <!-- Ganti warna border jika perlu -->

    <!-- Corner radius -->
    <corners android:radius="12dp" /> <!-- Radius untuk membuat sudut melingkar -->

    <!-- Padding (opsional) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
